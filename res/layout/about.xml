<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_bar"
        android:gravity="left|center" >
    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LinearLayout02"
        android:layout_below="@+id/LinearLayout01"
        android:layout_centerInParent="true"
        android:background="#FFFFFF" >

        <LinearLayout
            android:id="@+id/LinearLayout04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayout05"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FF9900"
                android:padding="3dip" >

                <TextView
                    android:id="@+id/TextView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="アプリについて"
                    android:textColor="#FFFFFF" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dip" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="このアプリはgogo.gsの「ガソリン価格情報WEBサービスAPI」を利用したガソリンスタンド検索アプリです。"
                    android:textColor="#000000" >
                </TextView>

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dip"
                    android:text="・提供される情報の正確性は保証されていません。"
                    android:textColor="#000000"
                    android:textSize="11sp" >
                </TextView>

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dip"
                    android:text="・情報が継続して提供されることは保証されていません。"
                    android:textColor="#000000"
                    android:textSize="11sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout06"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingBottom="3dip"
                android:paddingRight="5dip" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:src="@drawable/credit" >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout03"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FF9900"
                android:padding="3dip" >

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dip"
                    android:text="使い方"
                    android:textColor="#FFFFFF" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout07"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dip" >

                <TextView
                    android:id="@+id/TextView07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ガソリンスタンドの検索"
                    android:textColor="@color/blue" >
                </TextView>

                <TextView
                    android:id="@+id/TextView08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="画面右の虫眼鏡アイコンをタップ。"
                    android:textColor="#000000" >
                </TextView>

                <TextView
                    android:id="@+id/TextView09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MENUボタン > 「検索」でも可。"
                    android:textColor="@color/black" >
                </TextView>

                <TextView
                    android:id="@+id/TextView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="地図の拡大・縮小"
                    android:textColor="@color/blue" >
                </TextView>

                <TextView
                    android:id="@+id/TextView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="画面右下の＋、ーアイコンをタップ。"
                    android:textColor="@color/black" >
                </TextView>

                <TextView
                    android:id="@+id/TextView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="ガソリンスタンドの詳細表示"
                    android:textColor="@color/blue" >
                </TextView>

                <TextView
                    android:id="@+id/TextView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="検索後、ガソリンスタンドのピン画像をタップ。"
                    android:textColor="@color/black" >
                </TextView>

                <TextView
                    android:id="@+id/TextView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="ルート検索"
                    android:textColor="@color/blue" >
                </TextView>

                <TextView
                    android:id="@+id/TextView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="詳細からルート検索ボタンをタップ。"
                    android:textColor="@color/black" >
                </TextView>

                <TextView
                    android:id="@+id/TextView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="ガソリンスタンドのリスト表示"
                    android:textColor="@color/blue" >
                </TextView>

                <TextView
                    android:id="@+id/TextView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="検索後、画面右上のリストアイコンをタップ。"
                    android:textColor="@color/black" >
                </TextView>

                <TextView
                    android:id="@+id/TextView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:text="共有（他アプリとの連携）"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/TextView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="詳細画面で MENUボタン > 「共有」をタップ。"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/TextView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="twitterやメールにメッセージを共有します。使用できる置換文字は以下のとおりです。"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/TextView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="　#kind → 油種に置換"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/TextView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="　#price → ガソリン価格に置換"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/TextView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="　#shop_name → ガソリンスタンドの店名に置換"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>